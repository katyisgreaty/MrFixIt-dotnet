@{
    ViewData["Title"] = "Jobs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model MrFixIt.Models.Job

<h2>Mark as complete</h2>
<hr />

<form data-url-action="@Url.Action("Complete", "Jobs")" class="claim-job">
    <input type="hidden" name="jobId" value="@Model.JobId" />
    <input type="hidden" name="title" value="@Model.Title" />
    <input type="hidden" name="description" value="@Model.Description" />

    <label for="editCompleted">Name: </label>
    <input type="text" name="editCompleted" />

    <h4>@Model.Title</h4>

    <button type="submit">Claim this job</button>

</form>




